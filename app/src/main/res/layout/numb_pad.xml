<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/material_deep_teal_500"
 >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/promptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Some Message"
            android:textSize="30dp" />

    </LinearLayout-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_currency_sbl"
            android:text="Rs."
            android:gravity="center"
            android:textColorHint="@color/button_material_dark"
            android:textColor="@color/card_activated_kitkat"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/promptValue"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="0.00"
            android:textColorHint="@color/button_material_dark"
            android:textColor="@color/myAccentColor"
            android:textSize="22dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="0dp"
                android:background="@color/material_deep_teal_500">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@color/material_deep_teal_500"
                    android:text="1"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@color/material_deep_teal_500"
                    android:text="2"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="3"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/material_deep_teal_500">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="4"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="5"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="6"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/material_deep_teal_500">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="7"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="8"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="9"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_margin="0dp"
                android:background="@color/material_deep_teal_500">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="C"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="0"
                    android:layout_margin="0dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="wrap_content"
                    android:background="@color/material_deep_teal_500"
                    android:layout_height="60dp"
                    android:text="."
                    android:layout_margin="0dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
    </FrameLayout>